{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-6">
            <h1>Users</h1>
        </div>
        <div class="col-sm-6 text-right" style="margin-top: 30px;">
            <a href="{{ urlFor('admin.users.add') }}" class="btn btn-success">Add new user</a>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Name</th>
            <th>Created At</th>
            <th class="text-right">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.created_at|date('H:i d/m/Y') }}</td>
                <td class="text-right">
                    {% if user.id > 1 %}
                        <a href="{{ urlFor('admin.users.edit', {'userId': user.id}) }}" class="btn btn-success">Edit</a>
                        <a href="{{ urlFor('admin.users.delete', {'userId': user.id}) }}" class="btn btn-danger">Delete</a>
                    {% else %}
                        <span class="badge badge-default">Not allowed</span>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}